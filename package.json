{
  "name": "tg-theguardian",
  "version": "1.0.0",
  "description": "Chatbot corporativo para Teravision Games",
  "main": "dist/index.js",
  "type": "commonjs",
  "scripts": {
    "start": "node --experimental-specifier-resolution=node --experimental-modules dist/index.js",
    "dev:local": "cross-env NODE_ENV=development ts-node-dev --experimental-specifier-resolution=node --experimental-print-required-tla --respawn --transpile-only src/index.ts --env-file=.env.local",
    "dev": "cross-env NODE_ENV=development ts-node-dev --experimental-specifier-resolution=node --respawn --transpile-only src/index.ts",
    "dev:script": "powershell -ExecutionPolicy Bypass -File .\\scripts\\dev.ps1",
    "setup:local": "node scripts/setup-local-dev.js",
    "start:local": "powershell -ExecutionPolicy Bypass -File .\\scripts\\start-local.ps1",
    "start:local:unix": "bash ./scripts/start-local.sh",
    "build": "tsc",
    "build:clean": "powershell -ExecutionPolicy Bypass -File .\\scripts\\build.ps1",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "test": "jest",
    "test:integration": "jest src/tests/integration",
    "test:mongodb": "jest src/tests/integration/mongodb",
    "test:redis": "jest src/tests/integration/redis",
    "test:slack": "jest src/tests/integration/slack",
    "test:help": "powershell -ExecutionPolicy Bypass -File .\\scripts\\test.ps1 --help",
    "test:script": "powershell -ExecutionPolicy Bypass -File .\\scripts\\test.ps1",
    "test:unit": "jest --testPathIgnorePatterns=integration",
    "test:coverage": "jest --coverage",
    "test:llama": "node scripts/test-llama.mjs",
    "download:llama": "node scripts/download-llama-model.mjs",
    "setup": "npm install && npm run download:llama"
  },
  "dependencies": {
    "@slack/bolt": "^3.17.1",
    "@slack/web-api": "^6.11.2",
    "@types/express": "^4.17.21",
    "@types/ioredis": "^4.28.10",
    "@types/pdf-parse": "^1.1.5",
    "@types/winston": "^2.4.4",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "ioredis": "^5.6.1",
    "mongodb": "^6.3.0",
    "node-llama-cpp": "^3.7.0",
    "openai": "^4.95.1",
    "pdf-parse": "^1.1.1",
    "redis": "^4.7.0",
    "uuid": "^11.1.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/mongodb": "^4.0.6",
    "@types/node": "^20.17.30",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.1.4",
    "ts-jest": "^29.1.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NickoDante/AI4Devs-finalproject.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "types": "./dist/index.d.ts",
  "bugs": {
    "url": "https://github.com/NickoDante/AI4Devs-finalproject/issues"
  },
  "homepage": "https://github.com/NickoDante/AI4Devs-finalproject#readme"
}
